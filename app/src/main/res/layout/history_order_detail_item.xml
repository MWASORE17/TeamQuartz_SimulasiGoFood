<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_set"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/historydetailitem.tv.foodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/historydetailitem.tv.foodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price here" />

        <TextView
            android:id="@+id/historydetailitem.tv.foodquantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/gray"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>